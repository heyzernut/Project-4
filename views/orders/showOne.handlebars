<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/orders">Orders</a></li>
    <li class="breadcrumb-item">Current Order</li>
  </ol>
</nav>

<div class="container">
  <h6 class="display-4 text-center">
    <p>Invoice Number: {{order.invoiceNo}}</p>
  </h6>

  <p><span>Date of Order: {{order.formattedDate}}<span></p>

  <h6>Details:</h6>
  <span>Quotation No.: {{order.quotationNo}} &emsp;<span>
  <p><span>Customer: {{order.reseller}} &emsp;</span>
     <span>Delivery Time: {{order.deliveryTime}} &emsp;</span>
     <span>Delivery Address: {{order.deliveryAddress}} &emsp;</span>
     <span>Shipping Cost: ${{order.shippingCost}}</span>
  </p>

  <h6>Terms of Delivery:</h6>
  <p>{{order.termOfDelivery}}</p>

    <li>{{order.items}}</li>
  <table class="table table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Ordered Item</th>
        <th>OrderType</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each order.items as |item|}}
      <tr>
        <th scope="row">1</th>
        <td>{{item.furnitureStockId}}</td>
        {{#if item.return_date}}
        <td class="table-link" data-toggle="modal" data-target=".bd-example-modal-lg-{{item.id}}">{{item.order_type}}</td>
        {{else}}
        <td>{{item.order_type}}</td>
        {{/if}}
        <td>{{item.quantity_ordered}}</td>
        <td>{{!-- item.price --}}</td>
        <td>{{!-- item.price * item.quantity_ordered --}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/orders">Go Back</a><br>
  <a href="/orders/{{order.id}}/tracking/{{tracking.id  }}">Track Delivery</a>
</div>


{{#each order.items as |item| }}
<div class="modal fade bd-example-modal-lg-{{item.id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLabel"> Detail:</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">
         <div>
           Return Date: {{ item.formattedDate}}
         </div>


       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       </div>
     </div>
   </div>
</div>
{{/each}}
