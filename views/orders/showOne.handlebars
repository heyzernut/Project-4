<header class="page-header">
  <div class="container-fluid">
    <div class="clearfix">
    <h2 class="no-margin-bottom float-left" >{{order.invoiceNo}}</h2>
    <a href="/orders/{{order.id}}/tracking/{{tracking.id  }}" class="btn btn-primary active float-right" role="button" aria-pressed="true">Track</a>
    </div>
  </div>
</header>
<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item" aria-current="page"><a href="/orders">Orders</a></li>
    <li class="breadcrumb-item active">Current Order</li>
  </ol>
</nav>



<div class="container-fluid">

<div class="col-lg-12" style="margin-top: 25px;">
  <div class="card">
  <div class="card-body">
    <form>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><strong>Date of Order:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">{{order.formattedDate}}</p>
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Quotation No:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">{{order.quotationNo}}</p>
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Customer:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">{{order.reseller.name}}</p>
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Delivery Time:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">{{order.deliveryTime}}</p>
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Delivery Address:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">{{order.deliveryAddress}}</p>
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Shipping Cost:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">${{order.shippingCost}}</p>
      </div>
    </div>
    <hr/>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Terms of Delivery:</strong></label>
      <div class="col-sm-10">
        <p class="form-control-static">{{order.termOfDelivery}}</p>
      </div>
    </div>
  </form>


  <table class="table table-striped">
    <thead>
      <tr>
        <th>Ordered Item</th>
        <th>OrderType</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each order.items as |item|}}
      <tr>
        <td>{{item.itemCode}}</td>
        {{#if item.return_date}}
        <td class="table-link" data-toggle="modal" data-target=".bd-example-modal-lg-{{item.id}}">{{item.order_type}}</td>
        {{else}}
        <td>{{item.order_type}}</td>
        {{/if}}
        <td>{{item.quantity_ordered}}</td>
        <td>{{!-- item.price --}}</td>
        <td>{{!-- item.price * item.quantity_ordered --}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>


{{!-- popup returndate for demo items --}}
{{#each order.items as |item| }}
<div class="modal fade bd-example-modal-lg-{{item.id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLabel"> Detail:</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">
         <div>
           Return Date: {{ item.formattedDate}}
         </div>


       </div>
       <div class="modal-footer">
         <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       </div>
     </div>
   </div>
</div>
{{/each}}
</div>
</div>
</div>
</div>
