<h3 class="display-4 text-center">
<p>Tracking</p>
</h3>
<div class="jumbotron">
  <h1 class="display-3">Invoice Number: {{delivery.invoiceNo}}</h1>
  <p class="lead">By: {{delivery.modeOfTransport}}</p>
  <p class="lead">Time: {{delivery.deliveryTime}}</p>
  <p class="lead">When: {{delivery.date}}</p>
  <p class="lead">To: {{delivery.deliveryAddress}}</p>
  <p class="lead">Shipping Cost: ${{delivery.shippingCost}}</p>
  <hr class="my-4">
  <p>Quotation number: {{delivery.quotationNo}}</p>
  <form action="/orders/{{delivery._id}}/tracking?_method=PUT" method="POST">
    <div class="form-group">
      <label for="exampleFormControlSelect1">Status</label>
      <select class="form-control" id="trackingStatus" name="trackStatus">
      <option>Shipped</option>
      <option>Preparing</option>
      <option>Received</option>
      <option>Received with issues</option>
    </select>
    </div>
    <div class="form-group" id="trackingComment" style="display:none">
      <label for="exampleFormControlTextarea1">Feedback</label>
      <textarea class="form-control" id="textAreaForTrackingComment" rows="3" name="trackingComment"></textarea>
    </div>
    <p class="lead">
      <button type="submit" class="btn btn-primary" name="button">Submit</button>
    </p>
  </form>

</div>
