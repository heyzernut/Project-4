<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/category">Category</a></li>
    <li class="breadcrumb-item">{{ category.name }}</li>
  </ol>
</nav>

<div class="container-fluid">

<div class="col-lg-12" style="margin-top: 25px;">
  <div class="card">
    <div class="card-close">
      <form action="/category/update/{{ category.id }}?_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger" name="button"><i class="ion-trash-b"></i> Delete</button>
      </form>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Update Category</h3>
    </div>
    <div class="card-body">
      <form action="/category/update/{{ category.id }}?_method=PUT" method="post">
        <div class="form-group">
          <label for="lblCompanyName" class="form-control-label">Category Name</label>
          <input id="inlineFormInput" class="form-control" name="category[txtName]" type="text" placeholder="Category Name..." class="mx-sm-3 form-control" value="{{ category.name }}">
        </div>
        <div class="form-group">
          <a href="/category" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Save changes</button>
      </form>
    </div>
  </div>
</div>

</div>
