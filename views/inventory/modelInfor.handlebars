<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Inventory</li>
    <li class="breadcrumb-item"><a href="/inventory/">models</a></li>
    <li class="breadcrumb-item">{{furnitureModel.itemCode}}</li>

  </ol>
</nav>

<div class="container-fluid">
  <div class="col-lg-12" style="margin-top: 25px;">
    <div class="card-close">

    </div>
    <div class="card card-body">
      Item Code: {{ furnitureModel.itemCode }} <hr>
      Model: {{ furnitureModel.model }} <hr>
      Category: {{ furnitureModel.category.name }} <hr>
      Color: {{ furnitureModel.color}} <hr>
      Dimension: {{ furnitureModel.dimension }} <hr>
      Barcode: {{ furnitureModel.barcode }} <hr>

      <div class="form-group row">
        <form class="col-sm-1 " action="/inventory/models/{{ furnitureModel.itemCode }}?_method=DELETE" method="post">
          <button class="btn btn-danger" type="submit" name="button">Delete</button>
        </form>

        <a href="/inventory/models/{{furnitureModel.itemCode}}/edit"><button class="btn btn-primary" type="button" name="button">Edit</button></a>
      </div>

    </div>
  </div>

  <div class="">
    <div>
      <div class="d-flex justify-content-between">
        <div class=""><h3>Stock List:</h3></div>
        <div class=""><a href="/inventory/models/{{furnitureModel.itemCode}}/newStock"><button type="button" class="btn btn-info" style="background-color:black; padding:8px 30px; margin-bottom: 15%; cursor: pointer;" name="button"><i class="ion-cube"></i> Add new stock</button></a></div>
      </div>
    </div>

    <table class="table display" id="example">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Quantity</th>
          <th scope="col">Location</th>
          <th scope="col">Zone</th>
          <th scope="col">Shelf</th>
          <th scope="col">Details view</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
          <th>Total</th>
          <td>{{total}}</td>
          <td colspan="6"></td>

        </tr>

      </tfoot>
      <tbody>
        {{#each furnitureStocks as |stock| }}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{ stock.quantity}}</td>
          <td>{{ stock.location.address}} ({{ stock.location.type}})</td>
          <td>{{ stock.zone}}</td>
          <td>{{ stock.shelf}}</td>
          <td><a href="/inventory/stocks/{{ stock.id}}"><button type="button" class="btn btn-info" name="button">View</button></a></td>
          <td>
            <a href="/inventory/stocks/{{ stock.id}}/edit"><button type="button" class="btn btn-primary" name="button">Edit</button></a>
          </td>
          <td>
            <form class="" action="/inventory/stocks/{{stock.id}}?_method=DELETE" method="post">
              <button class="btn btn-danger" type="submit" name="button">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>

</div>
