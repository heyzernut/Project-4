<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/inventory">Inventory</a></li>
    <li class="breadcrumb-item active" aria-current="page">models</li>
    <li class="breadcrumb-item">new</li>
  </ol>
</nav>
<div class="container-fluid">
  <div class="col-lg-12" style="margin-top: 25px;">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h3 class="h4">Add new furniture model</h3>
      </div>
      <div class="card-body">
        <form action="/inventory/models/new" method="post">
          <div class="form-group row">
            <div class="col-sm-4">
              <label class="form-control-label" for="lblItemCode">Item Code: </label>
              <input type="text" class="form-control" name="model[itemCode]" placeholder="Enter Item Code">
            </div>
            <div class="col-sm-4">
              <label class="form-control-label" for="lblModel">Model: </label>
              <input class="form-control" type="text" name="model[model]" placeholder="Enter Model">
            </div>
            <div class="col-sm-4">
              <label class="form-control-label" for="lblColor">Color: </label>
              <input class="form-control" type="text" name="model[color]" placeholder="Enter Color">
            </div>
          </div>
          <div class="line"></div>
          <div class="form-group row">
            <div class="col-sm-6">
              <label  class="form-control-label" for="lblDimension">Dimension: </label>
              <input class="form-control" type="text" name="model[dimension]" placeholder="Enter Dimension">
            </div>
            <div class="col-sm-6">
              <label  class="form-control-label" for="lblBarcode">Barcode: </label>
              <input class="form-control" type="text" name="model[barcode]" placeholder="Enter Barcode">
            </div>
          </div>
          <div class="line"></div>
          <div class="row col-sm-4">
            <label  class="form-control-label" for="lblCategory">Category: </label>
            <select class="form-control" name="model[category]">
              {{#each categories as |category|}}
              <option  value="{{ category.id }}">{{ category.name }} </option>
              {{/each}}
            </select>
          </div>
          <div class="line"></div>
          <div class="form-group">
            <a href="/inventory" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
