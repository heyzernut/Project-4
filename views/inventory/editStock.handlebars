<h3>Edit stock for {{ furnitureStock.furnitureModel.model }} ({{ furnitureStock.furnitureModel.itemCode }})</h3>
<h4>Location: {{furnitureStock.location.address}} ({{furnitureStock.location.type}})</h4>
<form action="/inventory/stocks/{{furnitureStock.id}}?_method=PUT" method="post">
  <label for="lblQuantity">Quantity:: </label>
  <input type="text" name="stock[quantity]" placeholder="Enter Quantity" value="{{furnitureStock.quantity}}">
  <div>
    <label for="lblLocation">Location: </label>
    {{#each locations as |location|}}
    <div class="">
      <input type="radio" id="location"
      name="stock[location]" value="{{location.id}}">
      <h5>{{ location.address }}({{ location.type }})</h5>

      <div class="reveal-if-active">
        {{#if location.zone}}
        <label for="lblZone">Zone: </label>
        <select class="require-if-active" name="stock[zone]">
          <option  value=""></option>
          {{#each location.zone as |zone|}}
          <option  value="{{ zone }}">{{ zone }} </option>
          {{/each}}
        </select>

        <label for="lblShelf">Shelf: </label>
        <select class="require-if-active" name="stock[shelf]">
          <option  value=""></option>
          {{#each location.shelf as |shelf|}}
          <option  value="{{ shelf }}">{{ shelf }} </option>
          {{/each}}
        </select>
        {{/if}}
      </div>
    </div>
    {{/each}}

  </div>



  <button type="submit" name="btn">Submit</button>

</form>

<form class="" action="/inventory/stocks/{{furnitureStock.id}}?_method=DELETE" method="post">
  <button class="btn btn-info" type="submit" name="button">Delete</button>
</form>
