<header class="page-header">
  <div class="container-fluid">
    <div class="clearfix">
    <h2 class="no-margin-bottom float-left" >Stock List:</h2>
    <a href="/inventory/stocks/new" class="btn btn-outline-warning active float-right" role="button" aria-pressed="true"><i class="ion-plus-round"></i>  Create new stock</a>
    </div>
  </div>
</header>
<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb" style="margin-bottom:30px;">
    <li class="breadcrumb-item active" aria-current="page"><a href="/inventory">Inventory</a> </li>
    <li class="breadcrumb-item active" aria-current="page">stocks</li>
  </ol>
</nav>
  <div class="container">

  <div class="d-flex flex-row-reverse">
    <div class=""><a href="/inventory/"><button type="button" class="btn btn-info" style="background-color:black; padding:8px 30px; margin-bottom: 15%; cursor: pointer;" name="button"><i class="ion-cube"></i> View Model</button></a></div>
  </div>

  <table class="table display" id="example">
    <thead>
      <tr>
        <th>Location</th>
        <th>Model</th>
        <th>Item Code</th>
        <th>Quantity</th>
        <th>Zone</th>
        <th>shelf</th>
        <th>Detail View</th>
        <th>Edit</th>
        <th>Remove</th>
      </tr>
    </thead>

    <tbody>

      {{#each furnitureStocks as |furnitureStock| }}

      <tr>
        <td>{{ furnitureStock.location.address}} ({{ furnitureStock.location.type}})</td>
        <td class="table-link" data-toggle="modal" data-target=".bd-example-modal-lg-{{furnitureStock.furnitureModel.itemCode}}">{{ furnitureStock.furnitureModel.model }}</td>
        <td class="table-link" data-toggle="modal" data-target=".bd-example-modal-lg-{{furnitureStock.furnitureModel.itemCode}}">{{ furnitureStock.furnitureModel.itemCode }}</td>
        <td>{{ furnitureStock.quantity}}</td>
        <td>{{ furnitureStock.zone}}</td>
        <td>{{ furnitureStock.shelf}}</td>
        <td ><a href="/inventory/stocks/{{ furnitureStock.id}}"><button class="btn btn-info" type="button" name="button">View</button></a></td>
        <td ><a href="/inventory/stocks/{{ furnitureStock.id}}/edit"><button class="btn btn-primary" type="button" name="button">Edit</button></a></td>

        <td>
          <form class="" action="/inventory/stocks/{{furnitureStock.id}}?_method=DELETE" method="post">
            <button class="btn btn-danger" type="submit" name="button">Delete</button>
          </form>
        </td>

      </tr>
      {{/each}}
    </tbody>


  </table>
</div>


{{#each furnitureStocks as |furnitureStock| }}
<div class="modal fade bd-example-modal-lg-{{ furnitureStock.furnitureModel.itemCode}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
         <h5 class="modal-title" id="exampleModalLabel"> Detail of {{ furnitureStock.furnitureModel.model }} ({{ furnitureStock.furnitureModel.itemCode }})</h5>
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">
         {{!-- <h4>Item Code :{{ furnitureStock.furnitureModel.itemCode }}</h4>
         <h4>Model :{{ furnitureStock.furnitureModel.model }}</h4> --}}
         Color: {{ furnitureStock.furnitureModel.color }} <hr/>
         Dimension: {{ furnitureStock.furnitureModel.dimension }} <hr/>
         Category: {{ furnitureStock.furnitureModel.category.name }}
       </div>
       <div class="modal-footer">
         <a href="/inventory/models/{{ furnitureStock.furnitureModel.itemCode}}"><button type="button" class="btn btn-primary" name="button">View Model</button></a>
         <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       </div>
     </div>
   </div>
</div>
{{/each}}
