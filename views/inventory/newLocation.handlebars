<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/location">Location</a></li>
    <li class="breadcrumb-item active" aria-current="page">new</li>
  </ol>
</nav>

<h3 class="display-4 text-center">
<p>New locations</p>
</h3>

<form action="/location/new" method="POST">
  <div class="form-group row">
    <label for="addressfield" class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" name="address">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Location</label>
    <select class="form-control" id="selectLocation" name="type">
      <option>Retail store</option>
      <option>Warehouse</option>
    </select>
  </div>

  <div class="form-group row" id="otherType" style="display:none">
    <label for="Zone" class="col-sm-2 col-form-label">Start zone</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" name="zone_start" id="Zone" placeholder="eg. A-Z">
    </div>
    <label for="Zone" class="col-sm-2 col-form-label">End zone</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" name= "zone_stop" id="Zone" placeholder="eg. A-Z">
    </div>
    <label for="Shelf" class="col-sm-2 col-form-label">Start shelf</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" name= "shelf_start" id="Shelf" placeholder="eg. 1-100">
    </div>
    <label for="Shelf" class="col-sm-2 col-form-label">End shelf</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" name= "shelf_stop" id="Shelf" placeholder="eg. 1-100">
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary" name="button">Create</button>
    </div>
  </div>
</form>
