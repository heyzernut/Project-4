<h2>Create new location</h2>

<form action="/location/new" method="POST">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Address</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" name="address" placeholder="Address">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Location</label>
    <select class="form-control" id="selectLocation" name="type">
      <option>Retail store</option>
      <option>Warehouse</option>
    </select>
  </div>

  <div class="form-group row" id="otherType" style="display:none">
    <label for="Zone" class="col-sm-2 col-form-label">Zone</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" id="Zone" placeholder="eg. A-Z">
    </div>
    <label for="Shelf" class="col-sm-2 col-form-label">Shelf</label>
    <div class="col-sm-10">
      <input type="address" class="form-control" id="Shelf" placeholder="eg. 1-100">
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary" name="button">Create</button>
    </div>
  </div>
</form>
