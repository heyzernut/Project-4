<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/inventory">Inventory</a></li>
    <li class="breadcrumb-item active" aria-current="page">Model</li>
    <li class="breadcrumb-item">Update</li>
  </ol>
</nav>

<div class="container-fluid" style="margin-top: 25px;">

  <div class="col-lg-12">
    <div class="card">
      <div class="card-close">
        <form action="/inventory/models/{{ furnitureModel.itemCode }}?_method=DELETE" method="post">
          <button type="submit" class="btn btn-danger" name="button"><i class="ion-trash-b"></i> Delete</button>
        </form>
      </div>
      <div class="card-header d-flex align-items-center">
        <h3 class="h4">Edit {{ furnitureModel.model }} ({{ furnitureModel.itemCode }})</h3>
      </div>
      <div class="card-body">
        <form action="/inventory/models/new" method="post">
          <div class="form-group row">
            <div class="col-sm-4">
              <label class="form-control-label" for="lblItemCode">Item Code: </label>
              <input type="text" class="form-control" name="model[itemCode]" placeholder="Enter Item Code" value="{{ furnitureModel.itemCode }}">
            </div>
            <div class="col-sm-4">
              <label class="form-control-label" for="lblModel">Model: </label>
              <input class="form-control" type="text" name="model[model]" placeholder="Enter Model" value="{{ furnitureModel.model }}">
            </div>
            <div class="col-sm-4">
              <label class="form-control-label" for="lblColor">Color: </label>
              <input class="form-control" type="text" name="model[color]" placeholder="Enter Color" value="{{ furnitureModel.color }}">
            </div>
          </div>
          <div class="line"></div>
          <div class="form-group row">
            <div class="col-sm-6">
              <label  class="form-control-label" for="lblDimension">Dimension: </label>
              <input class="form-control" type="text" name="model[dimension]" placeholder="Enter Dimension" value="{{ furnitureModel.dimension }}">
            </div>
            <div class="col-sm-6">
              <label  class="form-control-label" for="lblBarcode">Barcode: </label>
              <input class="form-control" type="text" name="model[barcode]" placeholder="Enter Barcode" value="{{ furnitureModel.barcode}}">
            </div>
          </div>
          <div class="line"></div>
          <div class="row col-sm-4">
            <label  class="form-control-label" for="lblCategory">Category: </label>
            <select class="form-control" name="model[category]">
              <option  value=""></option>
              {{#each categories as |category|}}
              <option  value="{{ category.id }}">{{ category.name }} </option>
              {{/each}}
            </select>
          </div>
          <div class="line"></div>
          <div class="form-group">
            <a href="/inventory" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>
