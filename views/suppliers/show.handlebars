<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/suppliers">Suppliers</a></li>
    <li class="breadcrumb-item">{{ supplier.name }}</li>
  </ol>
</nav>

<div class="container-fluid">
<div class="col-lg-12" style="margin-top: 25px;">
  <div class="card">
    <div class="card-close">
      <form action="/suppliers/{{ supplier.id }}?_method=DELETE" method="post">
          <button class="btn btn-danger" type="submit" name="button">Delete</button>
      </form>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Update Supplier</h3>
    </div>
    <div class="card-body">
      <form action="/suppliers/{{ supplier.id }}?_method=PUT" method="post">
        <div class="form-group">
          <label class="form-control-label">Name:</label>
          <input type="text" class="form-control" name="supplier[name]" value="{{ supplier.name }}">
        </div>
        <div class="form-group">
          <label class="form-control-label">Address:</label>
          <input type="text" class="form-control" name="supplier[location]" value="{{ supplier.location }}">
        </div>
        <div class="form-group">
          <label class="form-control-label">Contact No:</label>
          <input type="tel" class="form-control" name="supplier[contact]" value="{{ supplier.contact }}">
        </div>
        <div class="line"></div>
        <div class="form-group">
          <a href="/suppliers" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

</div>
