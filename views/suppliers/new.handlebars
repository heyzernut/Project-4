<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb" style="margin-bottom:30px;">
    <li class="breadcrumb-item"><a href="/suppliers">Suppliers</a></li>
    <li class="breadcrumb-item active" aria-current="page">New</li>
  </ol>
</nav>

<div class="container-fluid">
<div class="col-lg-12">
  <div class="card">
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Suppliers Details</h3>
    </div>
    <div class="card-body">
      <form action="/suppliers" method="post">
        <div class="form-group">
          <label class="form-control-label">Name:</label>
          <input type="text" class="form-control" name="supplier[name]" placeholder="Company Name...">
        </div>
        <div class="form-group">
          <label class="form-control-label">Address:</label>
          <input type="text" class="form-control" name="supplier[location]" placeholder="Address ...">
        </div>
        <div class="form-group">
          <label class="form-control-label">Contact No:</label>
          <input type="tel" class="form-control" name="supplier[contact]" placeholder="Contact No ...">
        </div>
        <div class="line"></div>
        <div class="form-group">
          <a href="/suppliers" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

</div>
