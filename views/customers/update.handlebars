<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb" style="margin-bottom:30px;">
    <li class="breadcrumb-item"><a href="/customers">Customer</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ customer.name }}</li>
  </ol>
</nav>

<div class="container-fluid">
<div class="col-lg-12">
  <div class="card">
    <div class="card-close">
      <form action="/customers/update/{{ customer.id }}?_method=DELETE" method="post">
          <button class="btn btn-danger" type="submit" name="button">Delete</button>
      </form>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Update Customer</h3>
    </div>
    <div class="card-body">
      <form action="/customers/update/{{ customer.id }}?_method=PUT" method="post">
        <div class="form-group">
          <label class="form-control-label" for="lblCompanyName">Company Name:</label>
          <input type="text" class="form-control" name="customer[txtName]" value="{{ customer.name }}">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblCompanyAddress">Company Address:</label>
          <input type="text" class="form-control" name="customer[txtAddress]" value="{{ customer.companyAddress }}">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblContactPerson">Contact Person:</label>
          <input type="tel" class="form-control" name="customer[txtContactPerson]" value="{{ customer.contactPerson }}">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblContactPerson">Contact Number:</label>
          <input type="tel" class="form-control" name="customer[txtContactNo]" value="{{ customer.contactNo }}">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblEmail">Email:</label>
          <input type="tel" class="form-control" name="customer[txtEmail]" value="{{ customer.email }}">
        </div>
        <div class="line"></div>
        <div class="form-group">
          <a href="/customers" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
