
<h3>Create Customer</h3>

<form action="/customers" method="post">
  <label for="lblCompanyName">Company Name : </label>
  <input type="text" name="customer[txtName]" placeholder="Enter Company Name">
  <br>

  <label for="lblCompanyAddress">Company Address: </label>
  <input type="text" name="customer[txtAddress]" placeholder="Enter Company Address">
  <br>

  <label for="lblContactPerson">Contact Person : </label>
  <input type="text" name="customer[txtContactPerson]" placeholder="Enter Contact Person">
  <br>

  <label for="lblContactNo">Contact No : </label>
  <input type="text" name="customer[txtContactNo]" placeholder="Enter Contact No.">
  <br>

  <label for="lblEmail">Email : </label>
  <input type="text" name="customer[txtEmail]" placeholder="Enter Email">
  <br>

  <button type="submit" name="btn">Submit</button>

</form>
