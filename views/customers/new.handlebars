<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb" style="margin-bottom:30px;">
    <li class="breadcrumb-item"><a href="/customers">Customer</a></li>
    <li class="breadcrumb-item active" aria-current="page">New</li>
  </ol>
</nav>

<div class="container-fluid">
<div class="col-lg-12">
  <div class="card">
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Create Customer</h3>
    </div>
    <div class="card-body">
      <form action="/customers" method="post">
        <div class="form-group">
          <label class="form-control-label" for="lblCompanyName">Company Name:</label>
          <input type="text" class="form-control" name="customer[txtName]" placeholder="Enter Company Name...">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblCompanyAddress">Company Address:</label>
          <input type="text" class="form-control" name="customer[txtAddress]" placeholder="Enter Company Address...">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblContactPerson">Contact Person:</label>
          <input type="tel" class="form-control" name="customer[txtContactPerson]" placeholder="Enter Contact Person...">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblContactPerson">Contact Number:</label>
          <input type="tel" class="form-control" name="customer[txtContactNo]" placeholder="Enter Contact No...">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblEmail">Email:</label>
          <input type="tel" class="form-control" name="customer[txtEmail]" placeholder="Enter Email...">
        </div>
        <div class="line"></div>
        <div class="form-group">
          <a href="/customers" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>
