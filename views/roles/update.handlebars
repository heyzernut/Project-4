<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/roles">Role</a></li>
    <li class="breadcrumb-item">{{ role.name }}</li>
  </ol>
</nav>

<div class="container-fluid">

<div class="col-lg-12" style="margin-top: 25px;">
  <div class="card">
    <div class="card-close">
      <form action="/roles/update/{{ role.id }}?_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger" name="button"><i class="ion-trash-b"></i> Delete</button>
      </form>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Update Role</h3>
    </div>
    <div class="card-body">
      <form action="/roles/update/{{ role.id }}?_method=PUT" method="post">
        <div class="form-group">
          <label class="form-control-label" for="lblRoleName">Role Name:</label>
          <input id="inlineFormInput" class="form-control" type="text" name="role[txtRole]" value="{{ role.name }}">
        </div>
        <div class="form-group">
          <a href="/roles" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Save changes</button>
      </form>
    </div>
    </div>
  </div>

</div>
</div>
