<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb" style="margin-bottom:30px;">
    <li class="breadcrumb-item"><a href="/staffs">Staff</a></li>
    <li class="breadcrumb-item active" aria-current="page">New</li>
  </ol>
</nav>

<div class="container-fluid">
<!-- Inline Form-->
<div class="col-lg-12">
  <div class="card">
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Create Staff</h3>
    </div>
    <div class="card-body">
      <form action="/staffs" method="post">
        <div class="form-group">
          <label class="form-control-label" for="lblName">Name:</label>
          <input type="text" class="form-control" name="staff[txtName]" placeholder="Enter Name...">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblPassword">Password:</label>
          <input type="text" class="form-control" name="staff[txtPassword]" placeholder="Enter Password...">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblRole">Role: </label>
          <select name="staff[role]" class="form-control">
            {{#each role as |role|}}
            <option value={{role.id}}>{{role.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="line"></div>
        <div class="form-group">
          <a href="/staffs" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" name="btnStaff" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

</div>
