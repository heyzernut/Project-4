<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page"><a href="/staffs">Staffs</a></li>
    <li class="breadcrumb-item">{{ staff.name }}</li>
  </ol>
</nav>

<div class="container-fluid">
<div class="col-lg-12" style="margin-top: 25px;">
  <div class="card">
    <div class="card-close">
      <form action="/staffs/update/{{ staff.id }}?_method=DELETE" method="post">
          <button class="btn btn-danger" type="submit" name="button">Delete</button>
      </form>
    </div>
    <div class="card-header d-flex align-items-center">
      <h3 class="h4">Update Staff</h3>
    </div>
    <div class="card-body">
      <form action="/staffs/update/{{ staff.id }}?_method=PUT" method="post">
        <div class="form-group">
          <label class="form-control-label" for="lblRoleName">Staff Name:</label>
          <input type="text" class="form-control" name="staff[txtName]"placeholder="Enter Staff Name" value="{{ staff.name }}">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblPassword">Password:</label>
          <input type="password" class="form-control" name="staff[txtPassword]" placeholder="Enter Password" value="{{ staff.password }}">
        </div>
        <div class="form-group">
          <label class="form-control-label" for="lblRole">Role:</label>
          <select name="staff[role]" class="form-control">
            <option value={{selected.name}} selected>{{ selected.name }}</option>
            {{#each role as |roleEach|}}
            <option value={{roleEach.name}}>{{ roleEach.name }}</option>
            {{/each}}
          </select>
        </div>
        <div class="line"></div>
        <div class="form-group">
          <a href="/staffs" class="btn btn-secondary" role="button" aria-pressed="true">Cancel</a>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

</div>
